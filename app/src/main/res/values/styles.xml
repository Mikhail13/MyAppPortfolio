<resources>

    <color name="window_background_color">#fff8e1</color>
    <color name="button_background_normal">#f08C35</color>
    <color name="button_background_special">#ff4081</color>
    <color name="button_text_color">@android:color/white</color>

    <style name="MyAppPortfolioTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowBackground">@color/window_background_color</item>
    </style>

    <style name="ButtonStyleNormal">
        <item name="android:backgroundTint">@color/button_background_normal</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ButtonStyleSpecial">
        <item name="android:backgroundTint">@color/button_background_special</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

</resources>
